<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cal+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
    <title>E-Commerce</title>
</head>

<body class="bg-light">
    <header>
        @await Html.PartialAsync("Partials/Admin/_Message")
        @await Html.PartialAsync("Partials/Site/_Topbar")

        <!-- RenderSection içine değer girmek için, içine yazmak istediğimiz değeri nereye yazmak istiyorsak biz bu değeri Home un içerisindeki Index içerisine attık. -->
        @RenderSection("Bar", required: false) <!-- İçine girilen değer her sayfa da olmuyacak anlamına gelir. -->
    </header>

    <main>
        @RenderBody()
    </main>

    <script src="~/js/fslightbox.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
</body>

@await Html.PartialAsync("Partials/Site/_Footer")



</html>