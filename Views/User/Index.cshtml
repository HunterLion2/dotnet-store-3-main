@using Microsoft.AspNetCore.Identity
@model List<AppUser>

@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col">
        <div class="shadow" id="KategoriTableSettings">
            <div class=" py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title p-2">Kullanıcılar</h5>
                <a asp-controller="User" asp-action="Create" class="btn btn-sm btn-primary m-2">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
            <form method="get">
                <div class="input-group mb-2 p-2">
                    <select name="role" class="form-select" asp-items="ViewBag.Roller">
                        <option value="" selected>Hepsi</option>
                    </select>
                    <button class="btn btn-secondary" type="submit">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </div>
            </form>
            @if (Model.Count() == 0)
            {
                <p class="text-danger">Kullanıcılar Yok</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead class="table-secondary">
                            <tr>
                                <th class="text-center">Id</th>
                                <th class="text-center">Ad Soyad</th>
                                <th class="text-center">Email</th>
                                <th class="text-center" style="width: 100px;">Düzenleme</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kat in Model)
                            {
                                <tr>
                                    <td class="text-center">@kat.Id</td>
                                    <td class="text-center">@kat.UserName</td>
                                    <td class="text-center">@kat.AdSoyad</td>
                                    <td class="text-center">
                                        <a asp-controller="User" asp-action="Edit" asp-route-id="@kat.Id"
                                            class="btn btn-primary btn-sm">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a asp-controller="User" asp-action="Delete" asp-route-id="@kat.Id"
                                            class="btn btn-danger btn-sm">
                                            <i class="fa-solid fa-xmark"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>
</div>